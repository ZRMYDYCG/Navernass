{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "requireCommits": true,
    "addUntrackedFiles": false,
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "âœ¨ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ› Bug Fixes"
          },
          {
            "type": "perf",
            "section": "âš¡ï¸ Performance Improvements"
          },
          {
            "type": "revert",
            "section": "âªï¸ Reverts"
          },
          {
            "type": "docs",
            "section": "ğŸ“ Documentation"
          },
          {
            "type": "style",
            "section": "ğŸ’„ Styles"
          },
          {
            "type": "refactor",
            "section": "â™»ï¸ Code Refactoring"
          },
          {
            "type": "test",
            "section": "âœ… Tests"
          },
          {
            "type": "build",
            "section": "ğŸ“¦ï¸ Build System"
          },
          {
            "type": "ci",
            "section": "ğŸ¡ Continuous Integration"
          },
          {
            "type": "chore",
            "hidden": true
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "gitRawCommitsOpts": {
        "path": "."
      }
    }
  },
  "hooks": {
    "after:bump": "echo 'Version bumped to ${version}'",
    "after:release": "echo 'Successfully released ${name} v${version} to ${repo.repository}'."
  }
}
