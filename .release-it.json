{
    "git": {
        "commitMessage": "chore(release): v${version}",
        "tagName": "v${version}",
        "requireCleanWorkingDir": true,
        "requireUpstream": true,
        "requireCommits": true,
        "addUntrackedFiles": false,
        "commit": true,
        "tag": true,
        "push": true
    },
    "github": {
        "release": true,
        "releaseName": "Release v${version}",
        "autoGenerate": true
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits",
                "types": [{
                        "type": "feat",
                        "section": "‚ú® Features"
                    },
                    {
                        "type": "fix",
                        "section": "üêõ Bug Fixes"
                    },
                    {
                        "type": "perf",
                        "section": "‚ö°Ô∏è Performance Improvements"
                    },
                    {
                        "type": "revert",
                        "section": "‚è™Ô∏è Reverts"
                    },
                    {
                        "type": "docs",
                        "section": "üìù Documentation"
                    },
                    {
                        "type": "style",
                        "section": "üíÑ Styles"
                    },
                    {
                        "type": "refactor",
                        "section": "‚ôªÔ∏è Code Refactoring"
                    },
                    {
                        "type": "test",
                        "section": "‚úÖ Tests"
                    },
                    {
                        "type": "build",
                        "section": "üì¶Ô∏è Build System"
                    },
                    {
                        "type": "ci",
                        "section": "üé° Continuous Integration"
                    },
                    {
                        "type": "chore",
                        "hidden": true
                    }
                ]
            },
            "infile": "CHANGELOG.md",
            "header": "# Changelog",
            "gitRawCommitsOpts": {
                "path": "."
            }
        }
    },
    "hooks": {
        "after:bump": "echo 'Version bumped to ${version}'",
        "after:release": "echo 'Successfully released ${name} v${version} to ${repo.repository}'."
    }
}